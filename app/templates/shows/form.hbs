<form role="form" {{action "save" model on="submit"}}>

  <div class="form-group">
    <label for="level">Ano</label>
    {{view "select" content=allowedLevels value=model.level prompt="Escolha um ano:" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="name">Nome</label>
    {{upper-text-input type="text" placeholder="Nome" value=model.name class="form-control" id="name"}}
  </div>

  <button type="submit" class="btn btn-default">Salvar</button>
</form>
